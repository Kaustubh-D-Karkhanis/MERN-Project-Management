<%- include('partials/header') %>
<div class="container mt-5">
  <h1 style="color: rgb(117,239,73) ;">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card mycard" >
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email" style="color: rgb(117,239,73) ;">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password" style="color: rgb(117,239,73) ;">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-success" style="color: rgb(0, 0, 0) ;">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
